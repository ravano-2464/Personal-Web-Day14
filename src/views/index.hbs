<html>
    <head>
      <title>Personal Web</title>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
      <link rel="icon" href="/assets/icon/dumbways.ico" type="image/x-icon">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

        * {
            text-decoration: none;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .nav-link {
            font-size: 25px;
        }

        .nav-link a {
            color: black;
            white-space: nowrap;
            display: block;
            text-decoration: none;
        }

        .nav-link a:hover {
            color: orangered;
        }

        .active {
            color: black !important;
            font-weight: bold;
        }

        .btn-contact,
        .btn-submit {
            background-color: #f7f7f7;
            color: #333;
            padding: 10px;
            width: 130px;
            font-size: 16px;
            border-radius: 10px;
            text-decoration: none;
            text-align: center;
            border: 2px solid #333;
            transition: background-color 0.3s ease, color 0.3s ease;
            cursor: pointer;
        }

        .btn-contact:hover,
        .btn-submit:hover {
            background-color: #333;
            color: #fff;
        }
    </style>
    </head>
    <body>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img src="/assets/image/dumbways.png" id="image" style="height: 50px; width: 75px;" />
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link fw-semibold active text-danger" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item ms-3">
                <a class="nav-link" href="/My-Project">Add My Project</a>
              </li>
            </ul>

            <div class="d-flex justify-content-end">
              <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
                {{#if isLogin}}
                  <li class="nav-item">
                    <a class="nav-link fw-bold active text-danger">Hello, {{user}}</a>
                  </li>
                  <li class="nav-item ms-3">
                    <a class="nav-link" href="#">Logout</a>
                  </li>
                {{else}}
                  <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                  </li>
                  <li class="nav-item ms-3">
                    <a class="nav-link" href="/login">Login</a>
                  </li>
                {{/if}}
              </ul>
              <a class="btn btn-danger btn-submit ms-5" href="/contact">Contact Me</a>
            </div>
          </div>
        </div>
      </nav>

      {{#if messages.success}}
        <div class="alert alert-success" role="alert">
          <div class="container">
            {{messages.success}}
          </div>
        </div>
      {{/if}}

      <div class="container d-flex mt-5">
        <div class="card p-3" style="max-width: 22rem; flex: 40%;">
          <img src="/assets/image/Ravano.jpeg" class="card-img-top rounded" alt="Ravano Akbar Widodo">
